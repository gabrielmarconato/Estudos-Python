def dados_pessoais(nome, sobrenome, idade, sexo):
    print("Nome: {}\nSobrenome: {}\nIdade: {}\nSexo: {}"
          .format(nome, sobrenome, idade, int(sexo)))

w = input(str("Digite seu primeiro nome: "))
x = input(str("Digite seu sobrenome: "))
y = input(str("Digite sua idade: "))
z = input(str("Digite 1 caso vocÃª seja homem e 2 caso seja mulher: "))



dados_pessoais(nome=w,
               sobrenome=x,
               idade=y,
               sexo=z)
